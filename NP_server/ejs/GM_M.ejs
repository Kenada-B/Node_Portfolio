<script type="text/javascript">
function print_map(){
    var initCenter=new google.maps.LatLng(37.5665350, 126.9779690);

    var map=new google.maps.Map(document.getElementById("print_map"),{
        center:initCenter,
        zoom:9,
        mapTypeId:google.maps.MapTypeId.ROADMAP
    });

    var input = document.getElementById('map_input');
    var searchBox = new google.maps.places.SearchBox(input);

    map.addListener('bounds_changed', function() {
        searchBox.setBounds(map.getBounds());
    });

    var Spots = [];
    searchBox.addListener('places_changed', function() {
        var places = searchBox.getPlaces();

        if (places.length === 0) {
            return;
        }

        Spots.forEach(function(spot) {
            spot.setMap(null);
        });

        var bounds = new google.maps.LatLngBounds();
        places.forEach(function(place) {
            if (!place.geometry) {
                return;
            }

            var spot=new google.maps.Marker({
                map: map,
                position: place.geometry.location
            });

            spot.addListener('click', function() {
                infowindow.open(map, spot);
            });

            infoContent="test";

            var infowindow = new google.maps.InfoWindow({
                content:infoContent
            });

            Spots.push(spot);

            if (place.geometry.viewport) {
                bounds.union(place.geometry.viewport);
            } else {
                bounds.extend(place.geometry.location);
            }
        });
        map.fitBounds(bounds);
    });
}
google.maps.event.addDomListener(window, 'load', print_map);

</script>
